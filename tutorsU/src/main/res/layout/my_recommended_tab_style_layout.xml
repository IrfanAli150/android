<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/tab_icon"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimension_45dp"
        android:layout_weight="1"
        android:focusableInTouchMode="true"
        android:src="@drawable/selector_recommended_tab_icon" />

    <TextView
        android:id="@+id/tab_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimension_45dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dimension_45dp"
        android:text="@string/recommended_tab_my_trusted"
        android:textColor="@drawable/seletor_tab_title_color"
         />

</LinearLayout>